<!-- ./views/index.handlebars -->

<body class="partial-body">


  <!-- record list -->
  <div class="container-record mt-5">
    <h1 style="color:rgb(198, 7, 7) ;">
      <div class="text-center">
        Total Amount <i class="fa-solid fa-dollar-sign">{{totalAmount}}</i>
      </div>
    </h1>
    <div class="scroll">
      <table class="table table-striped table-hover m-auto" style="width:700px ;">
        <thead>
          <tr>
            <th scope="col">類別</th>
            <th scope="col">名稱</th>
            <th scope="col">時間</th>
            <th scope="col">金額</th>
          </tr>
        </thead>
        <tbody>
          {{#each record}}
          <tr>
            <td>{{{getIcon this.categoryName ../categoryIcon}}} {{this.categoryName}}</td>
            <td>{{this.name}}</td>
            <td>{{this.date}}</td>
            <td><i class="fa-solid fa-dollar-sign"></i>{{this.amount}}
              <div class=" edit-and-delete d-flex flex-row-reverse bd-highlight">
                <div class="p-2 bd-highlight">
                  <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                    <div class="btn-group btn-group-sm" role="group" aria-label="...">
                      <button type="submit" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
                    </div>
                  </form>
                </div>
                <div class="p-2 bd-highlight mt-1"><a href="./records/{{ this._id }}/edit"><i
                      class="fa-solid fa-pen"></i></a>
                </div>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="text-center mt-3">
      <a href="/records/new" class="btn btn-outline-secondary">
        <i class="fa-solid fa-folder-plus"></i> 新增支出
      </a>
    </div>
  </div>
</body>